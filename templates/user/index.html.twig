{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block stylesheets %}
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .user-info {
            width: 400px;
            padding: 30px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        .user-detail {
            margin-bottom: 10px;
        }

        .user-label {
            color: #666;
            margin-bottom: 6px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="user-info">
        <h2>User Information</h2>
        <div class="user-detail">
            <span class="user-label">Identifiant:</span>
            <span>{{ user.identifiant }}</span>
        </div>
        <div class="user-detail">
            <span class="user-label">Mot de passe:</span>
            <span>{{ user.password }}</span>
        </div>
        <div class="user-detail">
            <span class="user-label">Description:</span>
            <span>{{ user.description }}</span>
        </div>
        <div class="user-detail">
            <span class="user-label">Ã‚ge:</span>
            <span>{{ user.age }}</span>
        </div>
    </div>
{% endblock %}


