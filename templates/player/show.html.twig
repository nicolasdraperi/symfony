<style>
    table {
        border-collapse: collapse;
        width: 100%;
        font-family: Arial, sans-serif;
    }

    th, td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: #f2f2f2;
        font-weight: bold;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #f2f2f2;
    }

    input[type="submit"] {
        padding: 6px 10px;
        cursor: pointer;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
    }

    input[type="submit"]:hover {
        background-color: #0056b3;
    }
    .action-box {
        display: flex;
        align-items: center;
        justify-content: left;
        margin-bottom: 10px;
    }

    .action-icon {
        width: 30px;
        height: 30px;
        background-color: #5cb85c;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
    }

    .action-icon::before {
        content: "+";
        color: white;
        font-weight: bold;
        font-size: 24px;
    }
</style>

<h1 style="text-align: center">Liste des personnage</h1>

<div class="action-box">
    <a class="action-icon" href="http://127.0.0.1:8000/player/formulaire"></a>
</div>

<table>
    <tr>
        <th>ID</th>
        <th>Nom</th>
        <th>Points de Vie</th>
        <th>Mana</th>
        <th>Points d'Action</th>
        <th>Points de Dommage</th>
        <th>Delete</th>
        <th>Modifier</th>
        <th>Plus d'info</th>
    </tr>

    {% for player in players %}
        <tr>
            <td>{{ player.id }}</td>
            <td>{{ player.nom }}</td>
            <td>{{ player.pv }}</td>
            <td>{{ player.mana }}</td>
            <td>{{ player.ap }}</td>
            <td>{{ player.ad }}</td><td>
                <form action="http://127.0.0.1:8000/player/delete/{{ player.id }}" method="post">
                    <input type="submit" value="Supprimer">
                </form>
            </td>
            <td>
                <form action="http://127.0.0.1:8000/player/formulaire_update/{{ player.id }}" method="post">
                    <input type="submit" value="Modifier">
                </form>
            </td>
            <td>
                <form action="http://127.0.0.1:8000/player/show/{{ player.id }}" method="get">
                    <input type="submit" value="+ d'info">
                </form>
            </td>
        </tr>
    {% endfor %}
</table>

